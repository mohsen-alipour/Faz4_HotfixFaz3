    @{
      Layout = "_LayoutCustomer";
     }
@model FileViewModel


   <div class="col-md-6 offset-md-3 mt-5">
            
        <h1>بارگذاری فایل سفارشات</h1>
        <form accept-charset="UTF-8" action="https://getform.io/f/{your-form-endpoint-goes-here}" method="POST" enctype="multipart/form-data" target="_blank">
         <input type="hidden" asp-for="CustomerUserId">
            
         <div class="form-group">
             <label asp-for="Id" class="col-sm-2 col-form-label"></label>
             <input type="text" class="form-control" asp-for="Id" readonly="readonly">
          </div>
          <div class="form-group">
             <label asp-for="ServiceTitle" class="col-sm-2 col-form-label"></label>
             <input type="text" class="form-control" asp-for="ServiceTitle" readonly="readonly">
          </div>
         
          <div class="form-group mt-3">
            <label class="mr-2">آپلود عکس</label>
            <input  type="file" asp-for="FormFile"  accept="image/png, image/jpeg">
          </div>
              <input type="submit" class="btn btn-success" asp-area="" asp-controller="Home" asp-action="FileUpload" formmethod="post" value="ثبت"/>
              <a class="btn btn-primary" asp-area="" asp-controller="Customer"asp-action="HistoryOrder">بازگشت</a>
        </form>
    </div> 
    
