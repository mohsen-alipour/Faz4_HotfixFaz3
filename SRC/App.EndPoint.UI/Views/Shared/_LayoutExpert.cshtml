<!DOCTYPE html>
<html lang="fa"dir="rtl">
   

    <head>
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - پنل آدمین</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/App.EndPoint.UI.styles.css" asp-append-version="true" />
 
    </head>
 
    <body>
     <nav class="navbar navbar-dark bg-primary" dir="rtl">
        <div class="container-fluid">
           <div class="navbar-header" dir="rtl">
               <a class="navbar-brand" asp-area="" asp-controller="Expert" asp-action="ExpertIndex">صفحه اصلی</a>
               <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">خروج</a>	
           </div>        
        </div>                 
     </nav>



<div class ="container">
<div class="d-flex">


    <div  class="col-2 d-inline-block">
        <div class="w3-sidebar w3-bar-block w3-light-grey w3-card" style="width:160px">        
             <div class="w3-bar-item w3-button" onclick="myAccFunc()">
                   تخصص
                   <i class="fa fa-caret-down"></i>
             </div>
             <div id="demoAcc" class="w3-hide w3-white w3-card-4">
                   <a asp-area="" asp-controller="Expert"asp-action="SetExpertSpeciallyFavorite" class="w3-bar-item w3-button">تخصص جدید</a>
                   <a asp-area="" asp-controller="Expert"asp-action="ListExpertSpecialy" class="w3-bar-item w3-button">لیست تخصص ها</a>
             </div>
      

            <div class="w3-dropdown-click">
           <div class="w3-bar-item w3-button" onclick="myDropFunc()">
                سفارش<i class="fa fa-caret-down"></i>
           </div>
           <div id="demoDrop" class="w3-dropdown-content w3-white w3-card-4">
              <a asp-area="" asp-controller="Expert" asp-action="" class="w3-bar-item w3-button">سرویس درخواستی</a>
@*              <a asp-area="Admin" asp-controller="Service"asp-action="GetAllService" class="w3-bar-item w3-button">انواع سرویس ها</a>*@  

           </div>

           </div>

       </div>
   </div>

      
      <div class="col-10 d-inline-block">
            @RenderBody()
      </div>





</div>


</div>


     <script>
function myAccFunc() {
  var x = document.getElementById("demoAcc");
  if (x.className.indexOf("w3-show") == -1) {
    x.className += " w3-show";
    x.previousElementSibling.className += " w3-green";
  } else { 
    x.className = x.className.replace(" w3-show", "");
    x.previousElementSibling.className = 
    x.previousElementSibling.className.replace(" w3-green", "");
  }
}

function myDropFunc() {
  var x = document.getElementById("demoDrop");
  if (x.className.indexOf("w3-show") == -1) {
    x.className += " w3-show";
    x.previousElementSibling.className += " w3-green";
  } else { 
    x.className = x.className.replace(" w3-show", "");
    x.previousElementSibling.className = 
    x.previousElementSibling.className.replace(" w3-green", "");
  }
}
</script>

    </body>
</html>
